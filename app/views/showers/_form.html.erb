<%= simple_form_for(@shower) do |f| %>

    <%= f.input :name, placeholder: "Name" %>
    <%= f.input :surname, placeholder: "surname" %>
    <%= f.input :address, placeholder: "address" %>
    <%= f.input :email, placeholder: "address" %>
    <%= f.input :avatar, placeholder: "picture",  as: :attachinary %>
    <%= f.input :description, placeholder: "description" %>
    <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>



